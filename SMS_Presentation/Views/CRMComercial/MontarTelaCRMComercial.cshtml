@using Presentation.Extensions
@using CrossCutting;
@using EntitiesServices.Work_Classes;
@model EntitiesServices.Model.CRM_COMERCIAL
@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="modalContainer">
        <div id="modal" class="modal" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        @*titulo gerado dinamicamente*@
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        @*Gerado dinamicamente*@
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="containerModalDesc">
        <div class="modal fade" id="modalDesc" tabindex="-1" role="dialog" aria-labelledby="modalDesc" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="modalDesc">Descrição do Processo</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div id="modalDescBody" class="modal-body">

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="page-title">
        <h3 class="title">Processos - CRM Comercial</h3>
        <br />
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("CarregarBase", "BaseAdmin")">Dashboard</a>
            </li>
            <li class="active">
                <strong>Processos - CRM Comercial</strong>
            </li>
        </ol>
        <br />
    </div>
    @if (ViewBag.Perfil == "ADM" || ViewBag.Perfil == "GER")
    {
        <div class="row">
            <div class="col-lg-3">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <span class="label label-primary pull-right">Hoje</span>
                        <h5>Processos CRM Comercial</h5>
                    </div>
                    <div class="ibox-content">
                        <h1 class="no-margins">@ViewBag.Pedidos</h1>
                        <small>Cadastrados</small>
                        <br />
                        <br />
                        <br />
                        <br />
                    </div>
                </div>
            </div>
            <div class="col-lg-3">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <span class="label label-primary pull-right">Hoje</span>
                        <h5>Processos CRM Comercial</h5>
                    </div>
                    <div class="ibox-content">
                        <h1 class="no-margins">@ViewBag.Atrasadas</h1>
                        <small>Atrasados</small>
                        <br />
                        <br />
                        @Html.ButtonLinkIndex(text: "Ver", controller: "CRMComercial", action: "VerAtrasadosComercial", buttonClass: "white")

                    </div>
                </div>
            </div>
            <div class="col-lg-3">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <span class="label label-primary pull-right">Hoje</span>
                        <h5>Processos CRM Comercial</h5>
                    </div>
                    <div class="ibox-content">
                        <h1 class="no-margins">@ViewBag.Canceladas</h1>
                        <small>Cancelados</small>
                        <br />
                        <br />
                        @Html.ButtonLinkIndex(text: "Ver", controller: "CRMComercial", action: "VerCanceladosComercial", buttonClass: "white")

                    </div>
                </div>
            </div>
            <div class="col-lg-3">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <span class="label label-primary pull-right">Hoje</span>
                        <h5>Processos CRM Comercial</h5>
                    </div>
                    <div class="ibox-content">
                        <h1 class="no-margins">@ViewBag.Encerradas</h1>
                        <small>Encerrados</small>
                        <br />
                        <br />
                        @Html.ButtonLinkIndex(text: "Ver", controller: "CRMComercial", action: "VerEncerradosComercial", buttonClass: "white")

                    </div>
                </div>
            </div>
        </div>
    }
    <div class="row">
        <div class="col-lg-12 col-md-12 col-xs-12">
            <div class="col-lg-12 col-md-12 col-xs-12 ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Filtros</h5>
                </div>

                @using (Html.BeginForm("FiltrarCRMComercial", "CRMComercial", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    <div class="ibox-content">
                        <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                            <div class="col-lg-2 col-md-2 col-xs-12">
                                Status
                                @Html.DropDownListFor(m => m.CRMC_IN_STATUS, (SelectList)ViewBag.Status, "Selecionar", new { @class = "form-control", autofocus = true })
                            </div>
                            <div class="col-lg-2 col-md-2 col-xs-12">
                                Data Início
                                @Html.TextBoxFor(m => m.CRMC_DT_CRIACAO, "{0:dd/MM/yyyy}", new { @class = "form-control date-picker", autofocus = true, @id="data1" })
                            </div>
                            <div class="col-lg-2 col-md-2 col-xs-12">
                                Data Prevista
                                @Html.TextBoxFor(m => m.CRMC_DT_PREVISTA, "{0:dd/MM/yyyy}", new { @class = "form-control date-picker", autofocus = true, @id="data2" })
                            </div>
                            <div class="col-lg-2 col-md-2 col-xs-12">
                                Número
                                @Html.TextBoxFor(m => m.CRMC_NR_NUMERO, new { @class = "form-control", autofocus = true })
                            </div>
                            <div class="col-lg-2 col-md-2 col-xs-12">
                                Nota Fiscal
                                @Html.TextBoxFor(m => m.CRMC_NR_NOTA_FISCAL, new { @class = "form-control", autofocus = true })
                            </div>
                            <div class="col-lg-2 col-md-2 col-xs-12">
                                Favorito
                                @Html.DropDownListFor(m => m.CRMC_IN_ESTRELA, (SelectList)ViewBag.Favorito, "Selecionar", new { @class = "form-control", autofocus = true })
                            </div>
                        </div>
                        <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                            <div class="col-lg-3 col-md-3 col-xs-12">
                                Nome do Processo
                                @Html.TextBoxFor(m => m.CRMC_NM_NOME, new { @class = "form-control", autofocus = true })
                            </div>
                            <div class="col-lg-5 col-md-5 col-xs-12">
                                Cliente (Nome, Razão Social ou CPF)
                                @Html.TextBoxFor(m => m.CRMC_NM_CLIENTE, new { @class = "form-control", autofocus = true })
                            </div>
                        </div>
                        <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                            <div class="col-lg-12 col-md-12 col-xs-12">                                     
                                @Html.ButtonActionSubmit(text: "Filtrar")
                                @Html.ButtonLinkIndex(text: "Retirar Filtro", controller: "CRMComercial", action: "RetirarFiltroCRMComercial")
                                @Html.ButtonLinkIndex(text: "Novo Processo", controller: "CRMComercial", action: "IncluirProcessoCRMComercial")
                                @Html.ButtonLinkIndex(text: "Gerar Relatório", controller: "CRMComercial", action: "GerarRelatorioListaCRMComercial")
                                @Html.ButtonLinkIndex(text: "Visualização Kanban", controller: "CRMComercial", action: "MontarTelaKanbanCRMComercial")
                                @Html.ButtonLinkIndex(text: "Ver Ações", controller: "CRMComercial", action: "VerAcoesUsuarioCRMComercial")
                                @Html.ButtonLinkIndex(text: "Dashboard CRM Comercial", action: "MontarTelaDashboardCRMComercialCompleto", controller: "CRMComercial")                
                                @Html.ButtonLinkIndex(text: "Dashboard", controller: "CRMComercial", action: "Voltar")
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12 col-md-12 col-xs-12"  id="Lista">
            <div class="col-lg-12 col-md-12 col-xs-12 ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Processos - CRM Comercial</h5>
                </div>
                <div class="ibox-content">
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            <button type="button" class="close" data-dismiss="alert">Fechar</button>
                            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                        </div>
                    }
                    <div class="row">
                        @if (ViewBag.Listas != null && (ViewBag.Listas as List<EntitiesServices.Model.CRM>).Count > 0)
                        {
                            <table class="table table-striped table-bordered table-hover dataTables-example">
                                <thead style="background-color:lightsteelblue">
                                    <tr>
                                        <th class="td-one-action"></th>
                                        <th style="width: auto">Cliente</th>
                                        <th style="width: auto">Nome</th>
                                        <th style="width: auto">Status</th>
                                        <th style="width: auto">Próxima Ação</th>
                                        <th style="width: auto">Data Criação</th>
                                        <th style="width: auto">Data Prevista</th>
                                        <th style="width: auto">Data Encerramento</th>
                                        <th class="td-one-action">Ações</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var cond in (ViewBag.Listas as List<EntitiesServices.Model.CRM_COMERCIAL>))
                                    {
                                        <tr>
                                            
                                            <td class="td-one-action">
                                                @if (cond.CRMC_IN_ATIVO == 1)
                                                {
                                                    if (cond.CRMC_IN_ESTRELA == 1)
                                                    {
                                                        <span style="color: #337ab7; cursor:pointer;" alt="Desativar" class="tbl-link fa-lg fa fa-star" onclick="ShowModalEstrelaNao('/CRMComercial/EstrelaNao/@cond.CRMC_CD_ID')" title="Arquivar"></span>
                                                    }
                                                    else if (cond.CRMC_IN_ESTRELA == 0)
                                                    {   
                                                        <span style="color: #337ab7; cursor:pointer;" alt="Reativar" class="tbl-link fa-lg fa fa-star-o" onclick="ShowModalEstrelaSim('/CRMComercial/EstrelaSim/@cond.CRMC_CD_ID')" title="Reativar"></span>
                                                    }
                                                }
                                                else
                                                {
                                                    if (cond.CRMC_IN_ESTRELA == 1)
                                                    {
                                                        <span style="color: #337ab7; cursor:pointer;" alt="Desativar" class="tbl-link fa-lg fa fa-star"></span>
                                                    }
                                                    else if (cond.CRMC_IN_ESTRELA == 0)
                                                    {   
                                                        <span style="color: #337ab7; cursor:pointer;" alt="Reativar" class="tbl-link fa-lg fa fa-star-o"></span>
                                                    }
                                                }
                                            </td>
                                            <td><a href="@Url.Action("EditarClienteComercial", "CRMComercial", new { id = cond.CLIE_CD_ID })" />@cond.CLIENTE.CLIE_NM_NOME</td>
                                            <td style="cursor: pointer; text-decoration: underline; color: #337ab7;" onclick="mostrarDesc('@cond.CRMC_DS_DESCRICAO')">@cond.CRMC_NM_NOME</td>
                                            @if (cond.CRMC_IN_STATUS == 1)
	                                        {
                                                <td><span class="badge badge-warning">Oportunidade</span></td>
                                            }
                                            else if (cond.CRMC_IN_STATUS == 2)
                                            {
                                                <td><span class="badge badge-primary">Proposta</span></td>
                                            }
                                            else if (cond.CRMC_IN_STATUS == 3)
                                            {
                                                <td><span class="badge badge-primary">Em Aprovação</span></td>
                                            }
                                            else if (cond.CRMC_IN_STATUS == 4)
                                            {
                                                <td><span class="badge badge-primary">Aprovado</span></td>
                                            }
                                            else if (cond.CRMC_IN_STATUS == 5)
                                            {
                                                <td><span class="badge badge-success">Reprovado</span></td>
                                            }
                                            else if (cond.CRMC_IN_STATUS == 6)
                                            {
                                                <td><span class="badge badge-success">Vendido</span></td>
                                            }
                                            else if (cond.CRMC_IN_STATUS == 7)
                                            {
                                                <td><span class="badge badge-success">Encerrado</span></td>
                                            }
                                            else if (cond.CRMC_IN_STATUS == 8)
                                            {
                                                <td><span class="badge badge-success">Cancelado</span></td>
                                            }
                                            @if (cond.CRM_COMERCIAL_ACAO.Count > 0)
                                            {
                                                <td style="width: auto">@cond.CRM_COMERCIAL_ACAO.Where(p => p.CRCA_IN_ATIVO == 1).OrderByDescending(m => m.CRCA_DT_PREVISTA).FirstOrDefault().CRCA_DS_DESCRICAO</td>
                                                if (cond.CRM_COMERCIAL_ACAO.Where(p => p.CRCA_IN_ATIVO == 1).OrderByDescending(m => m.CRCA_DT_PREVISTA).FirstOrDefault().CRCA_DT_PREVISTA.Date >= DateTime.Today.Date)
                                                {
                                                    <td style="width: auto; color: green; font-weight:bold">@cond.CRM_COMERCIAL_ACAO.Where(p => p.CRCA_IN_ATIVO == 1).OrderByDescending(m => m.CRCA_DT_PREVISTA).FirstOrDefault().CRCA_DT_PREVISTA.ToShortDateString()</td>
                                                }
                                                else
                                                {
                                                    <td style="width: auto; color: red; font-weight:bold">@cond.CRM_COMERCIAL_ACAO.Where(p => p.CRCA_IN_ATIVO == 1).OrderByDescending(m => m.CRCA_DT_PREVISTA).FirstOrDefault().CRCA_DT_PREVISTA.ToShortDateString()</td>
                                                }
                                            }
                                            else
                                            {
                                                <td>-</td>
                                                <td>-</td>
                                            }
                                            <td>@cond.CRMC_DT_CRIACAO.ToShortDateString()</td>
                                            <td>@cond.CRMC_DT_PREVISTA.ToShortDateString()</td>
                                            @if (cond.CRMC_DT_ENCERRAMENTO != null)
                                            {
                                                <td>@cond.CRMC_DT_ENCERRAMENTO.Value.ToShortDateString()</td>
                                            }
                                            else
                                            {
                                                <td>-</td>
                                            }
                                            <td class="td-one-action">
                                                @Html.TableLinkDetails(cond.CRMC_CD_ID, "AcompanhamentoProcessoCRMComercial", "fa-edit", "Consultar")
                                                @if (cond.CRMC_IN_STATUS == 5 || cond.CRMC_IN_STATUS == 7 || cond.CRMC_IN_STATUS == 8)
                                                {
                                                    @Html.TableLinkDetails(cond.CRMC_CD_ID, "VisualizarProcessoCRMComercial", "fa-search", "Consultar")
                                                }
                                                else
                                                {
                                                    if (ViewBag.Perfil == "ADM" || ViewBag.Perfil == "GER"  || ViewBag.Perfil == "VEN" )
                                                    {
                                                        if (cond.CRMC_IN_STATUS == 1 || cond.CRMC_IN_STATUS == 2)
                                                        {
                                                            if (ViewBag.Perfil == "ADM" || ViewBag.Perfil == "GER")
                                                            {
                                                                if (cond.CRMC_IN_ATIVO == 1)
                                                                {
                                                                    <span>&nbsp;</span>
                                                                    @Html.TableLinkDetails(cond.CRMC_CD_ID, "ExcluirProcessoComercial", "fa-trash-o", "Desativar") 
                                                                }
                                                                else
                                                                {
                                                                    <span>&nbsp;</span>
                                                                    @Html.TableLinkDetails(cond.CRMC_CD_ID, "ReativarProcessoComercial", "fa-refresh", "Reativar")
                                                                }
                                                            }
                                                            @Html.TableLinkDetails(cond.CRMC_CD_ID, "ProcessarEnviarAprovacaoCRMComercial", "fa-send", "Preparar Proposta")
                                                            @Html.TableLinkDetails(cond.CRMC_CD_ID, "CancelarProcessoCRMComercial", "fa-times", "Cancelar")
                                                        }
                                                        else if (cond.CRMC_IN_STATUS == 3)
                                                        {
                                                            @Html.TableLinkDetails(cond.CRMC_CD_ID, "AprovarProcessoCRMComercial", "fa-check", "Aprovar")
                                                            @Html.TableLinkDetails(cond.CRMC_CD_ID, "ReprovarProcessoCRMComercial", "fa-thumbs-o-down", "Reprovar")
                                                            @Html.TableLinkDetails(cond.CRMC_CD_ID, "CancelarProcessoCRMComercial", "fa-times", "Cancelar")
                                                        }
                                                        else if (cond.CRMC_IN_STATUS == 6 || cond.CRMC_IN_STATUS == 4)
                                                        {
                                                            @Html.TableLinkDetails(cond.CRMC_CD_ID, "ProcessarEncerrarProcessoCRMComercial", "fa-truck", "Encerrar")
                                                            @Html.TableLinkDetails(cond.CRMC_CD_ID, "CancelarProcessoCRMComercial", "fa-times", "Cancelar")
                                                        }
                                                        else
                                                        {
                                                            @Html.TableLinkDetails(cond.CLIE_CD_ID, "VisualizarProcessoCRMComercial", "fa-search", "Consultar")
                                                        }
                                                    }
                                                    else
                                                    {
                                                        @Html.TableLinkDetails(cond.CLIE_CD_ID, "VisualizarProcessoCRMComercial", "fa-search", "Consultar")
                                                    }
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                        else
                        {
                            <div class="row">
                                <div class="col-lg-4 col-md-4 col-xs-2">

                                </div>
                                <div style="border: 5px solid #F6A54A; padding: 10px; border-radius: 8px 8px; " class="col-lg-4 col-md-4 col-xs-8">
                                    <h2 style="font-weight: bold">Sua pesquisa não retornou nenhum resultado</h2>
                                    <p>Tente outras opções de pesquisa</p>

                                    @Html.ButtonLinkIndex(text: "Retirar Filtro", controller: "CRMComercial", action: "RetirarFiltroCRMComercial")
                                </div>
                                <div class="col-lg-4 col-md-4 col-xs-2">

                                </div>
                            </div>
                        }
                </div>
                </div>
            </div>
        </div>
    </div>

</div>

