                                </div>
                                <div class="col-xs-4">
                                    <small class="stats-label">Total (Mês)</small>
                                    <h4>@ViewBag.TotalMes</h4>
                                </div>
                                <div class="col-xs-4">
                                    <small class="stats-label">Em Atraso</small>
                                    <h4>@ViewBag.Atraso</h4>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-4">
                                    <small class="stats-label">Encerrados</small>
