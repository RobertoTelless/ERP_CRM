                                </div>
                                <div class="col-xs-4">
                                    <small class="stats-label">Fora SLA</small>
                                    <h4>@ViewBag.ForaSLA</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>      
            </div>
        
